<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="account-login">
    <div class="form-group">
      Firstname <%= f.text_field :firstname, class: 'form-control', placeholder: 'Firstname' %>
    </div>
    <div class="form-group">
      Lastname <%= f.text_field :lastname, class: 'form-control', placeholder: 'Lastname' %>
    </div>
    <div class="form-group">
      Email <%= f.text_field :email, class: 'form-control', placeholder: 'Email', type: 'email' %>
    </div>
    <div class="form-group">
      Password <%= f.text_field :password, class: 'form-control', placeholder: 'Password', type: 'password' %>
    </div>
    <div class="form-group">
      Confirm password <%= f.text_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', type: 'password' %>
    </div>
    <%= f.submit "Submit" %>
    <p>Already have an account?<%= link_to 'Login', '/login' %></p>
  </div>
<% end %>