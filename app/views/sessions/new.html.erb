
<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="account-login">
    <div class="form-group">
      Email <%= text_field_tag :email, "", class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="form-group">
      Password <%= password_field_tag :password, "", class: 'form-control', placeholder: 'Password' %>
    </div>
    <%= submit_tag "Submit" %>
    <p>No account yet?<%= link_to 'Signup', '/signup' %></p>
  </div>
<% end %>